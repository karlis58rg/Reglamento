            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewPDFController" />
        <activity android:name=".Reportes" />
        <activity android:name=".Pagos" />
        <activity android:name=".PagosImpresiones" />
        <activity
            android:name=".Infraccion"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LicenciaConducir"
            android:screenOrientation="portrait" />
