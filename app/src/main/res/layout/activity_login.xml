<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imgLogoLogin"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icn_logo_login"
        android:background="@color/backgroundLogoAzul"/>

    <EditText
        android:id="@+id/txtUser"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Usuario"
        android:maxLength="8"
        android:digits="ABCDEFGHIJKLMNÑOPQRSTUVWXYZ 1234567890"
        android:gravity="center"
        android:textColor="@color/hint"
        android:drawableRight="@drawable/user"
        android:backgroundTint="@color/backgroundtxt"
        android:drawableTint="@color/backgroundtxt"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/PassLogin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/backgroundtxt"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUser">

        <EditText
            android:id="@+id/txtPass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:maxLength="8"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:gravity="center"
            android:textColor="@color/hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtUser"
            android:backgroundTint="@color/backgroundtxt"
            android:drawableTint="@color/backgroundtxt"
            android:digits="ABCDEFGHIJKLMNÑOPQRSTUVWXYZ 1234567890"/>
    </com.google.android.material.textfield.TextInputLayout>



    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Iniciar"
        android:textStyle="bold"
        android:textColor="@color/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PassLogin"
        android:background="@drawable/boton_redondo" />




</androidx.constraintlayout.widget.ConstraintLayout>