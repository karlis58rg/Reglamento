<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapaDePago">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">
        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.88">
            <LinearLayout
                android:id="@+id/content"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/lySearch"
                    android:background="@color/backgroundLogoAzul"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.08"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.15"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/btnList1"
                            android:layout_width="35dp"
                            android:src="@drawable/icn_list_white"
                            android:layout_height="35dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.75"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imgLogoContacto"
                            android:layout_width="match_parent"
                            android:src="@drawable/icn_logo_login"
                            android:layout_height="48dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contentWebView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.92">

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true">
                    </fragment>
                </LinearLayout>

            </LinearLayout>

        </androidx.drawerlayout.widget.DrawerLayout>
        <LinearLayout
            android:id="@+id/menu"
            android:background="@color/backgroundtxt"
            android:layout_width="match_parent"
            android:layout_weight="0.12"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/lyInicio1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:weightSum="1"
                android:background="@drawable/drawable_pressed"
                android:layout_weight="0.25">

                <ImageView
                    android:layout_width="31.3dp"
                    android:layout_height="29.3dp"
                    android:src="@drawable/icn_reglamento"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="@android:color/white"
                    android:text="Reglamento"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyCategoria1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:weightSum="1"
                android:background="@drawable/drawable_pressed"
                android:layout_weight="0.25">

                <ImageView
                    android:layout_width="31.3dp"
                    android:layout_height="29.3dp"
                    android:src="@drawable/icn_lugares_pago"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:text="Lugres de pago"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyContacto1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:weightSum="1"
                android:background="@drawable/drawable_pressed"
                android:layout_weight="0.25">
                <ImageView
                    android:layout_width="31.3dp"
                    android:layout_height="29.3dp"
                    android:src="@drawable/icn_telefono"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:text="Contactos"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyFavoritos1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:weightSum="1"
                android:background="@drawable/drawable_pressed"
                android:layout_weight="0.25">

                <ImageView
                    android:layout_width="31.3dp"
                    android:layout_height="29.3dp"
                    android:src="@drawable/icn_tabulador"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="12dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:text="Tabulador"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_miadres"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@color/background"
        android:visibility="gone"/>
</FrameLayout>